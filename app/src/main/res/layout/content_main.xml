<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"/>

    <LinearLayout
        android:id="@+id/main_tab_layout"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="48dp" >

        <com.esprit.android.view.MxxPagerSlidingTabStrip
            android:id="@+id/main_tab"
            android:layout_width="match_parent"
            android:background="@color/mxx_item_theme_color_alpha"
            android:layout_height="48dp" >
        </com.esprit.android.view.MxxPagerSlidingTabStrip>
    </LinearLayout>

    <com.esprit.android.view.MxxScaleImageView
        android:id="@+id/main_mxxScaleImageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <fragment
        class="com.esprit.goga.fragment.ImageFragment"
        android:id="@+id/main_image_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_image" />





    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.esprit.goga.fragment.CommentsFragment"
        android:id="@+id/main_comments_fragment"/>



</FrameLayout>
