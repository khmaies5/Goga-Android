<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/about_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        android:clipToPadding="false"/>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/abouttoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/buaa_blue"
            app:popupTheme="@style/AppTheme.PopupOverlay" />



    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/about_tab_layout"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="48dp" >

        <com.esprit.android.view.MxxPagerSlidingTabStrip
            android:id="@+id/about_tab"
            android:layout_width="match_parent"
            android:background="@color/mxx_item_theme_color_alpha"
            android:layout_height="48dp" >
        </com.esprit.android.view.MxxPagerSlidingTabStrip>
    </LinearLayout>
</FrameLayout>
